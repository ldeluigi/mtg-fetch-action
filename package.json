{
  "name": "mtg-fetch-action",
  "version": "1.5.0",
  "private": true,
  "description": "Fetches MTG Cards from Scryfall and posts previews.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write ./**/*.ts",
    "format-check": "prettier --check ./**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --minify --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldeluigi/mtg-fetch-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "typescript",
    "mtg",
    "github",
    "scryfall"
  ],
  "author": "Luca Deluigi",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-types": "^6.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.0",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/parser": "^5.42.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.0.1",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^27.1.4",
    "jaro-winkler": "^0.2.8",
    "jest": "^27.2.5",
    "jest-circus": "^29.4.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.1",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
